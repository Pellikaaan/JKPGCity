<h1>Create Venue </h1>

{{#if errors.length}}
<p>Couldn't update the review because:</p>
<ul>
    {{#each errors}}
        <li>{{this}}</li>
    {{/each}}
</ul>
{{/if}}


<form action="/venues/createVenue"method="post">
<input type="hidden" name="_id" value="{{_id}}">

    <div>
        Name: <input type="text" name="name" value="{{name}}">
    </div>
        <h4>URL:</h4>
        <textarea name="url" value="{{url}}" rows="7" cols="40"> </textarea>
    </div>
     <div>
        District: <input type="text" name="district" value="{{district}}">
    </div>
        Rating:
        <select name="rating" id="rating">
            <option value= 1 > 1 </option>
            <option value= 2 > 2 </option>
            <option value= 3 selected> 3 </option>
            <option value= 4 > 4 </option>
            <option value= 5 > 5 </option>
        </select>
    <div>
        <input type="submit" value="Create Venue">
    </div>
    </div>
</form>